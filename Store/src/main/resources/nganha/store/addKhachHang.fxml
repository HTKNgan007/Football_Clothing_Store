<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="640.0" prefWidth="580.0" spacing="15" style="-fx-background-color: E3FAE0;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nganha.store.Controller.ActKhachHangController">
    <Label alignment="CENTER" prefHeight="68.0" prefWidth="740.0" text="Thêm khách hàng">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>
    <HBox alignment="CENTER_LEFT" prefHeight="71.0" prefWidth="740.0">
        <children>
            <Label prefWidth="110.0" text="Tên khách hàng:" />
            <TextField fx:id="txtTenKH" prefHeight="40.0" prefWidth="300.0" styleClass="custom-textfield" />
        </children>
        <padding>
            <Insets left="40.0" />
        </padding>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefHeight="67.0" prefWidth="740.0">
        <children>
            <Label prefWidth="110.0" text="SDT:" />
            <TextField fx:id="txtSDT" prefHeight="40.0" prefWidth="300.0" styleClass="custom-textfield" />
        </children>
        <padding>
            <Insets left="40.0" />
        </padding>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="740.0">
        <children>

            <Label prefWidth="110.0" text="Địa chỉ:" />
            <TextField fx:id="txtDiaChi" prefHeight="40.0" prefWidth="300.0" styleClass="custom-textfield" />
        </children>
        <padding>
            <Insets left="40.0" />
        </padding>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefHeight="68.0" prefWidth="740.0">
        <children>

            <Label prefWidth="110.0" text="Email:" />
            <TextField fx:id="txtEmail" prefHeight="40.0" prefWidth="300.0" styleClass="custom-textfield" />
        </children>
        <padding>
            <Insets left="40.0" />
        </padding>
    </HBox>
    <HBox alignment="CENTER" prefHeight="91.0" prefWidth="740.0">
        <children>

            <Button fx:id="btnAdd" onAction="#handleAddKhachHang" prefHeight="35.0" prefWidth="120.0" styleClass="act-button" text="Thêm">
                <HBox.margin>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#handleHuy" prefHeight="35.0" prefWidth="120.0" styleClass="act-button" text="Huỷ">
                <HBox.margin>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </HBox.margin>
            </Button>
        </children>
    </HBox>
</VBox>
